<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StoryViewActivity">

    <include
        layout="@layout/toolbar"></include>

    <ProgressBar
        android:id="@+id/pb_storyView"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv1_storyview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:cardElevation="1.5dp">

                <TextView
                    android:id="@+id/title_story_storyview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="РАНДОМНАЯ СТОРИ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"
                    android:visibility="visible" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2_storyview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2.5dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                app:cardElevation="1.5dp">

                <TextView
                    android:id="@+id/story_content_storyview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:text="Текст пасты"
                    android:textSize="20dp"
                    android:visibility="visible" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>